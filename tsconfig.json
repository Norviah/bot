{
  "extends": "@tsconfig/node16/tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "declaration": false,
    "removeComments": true,
    "module": "commonjs",
    "outDir": "build",
    "strict": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config": ["config.ts"]
    }
  },
  "include": [
    "src/**/*",
    "config.ts"
  ]
}