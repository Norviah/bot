{
  "extends": "@tsconfig/node16/tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "declaration": false,
    "removeComments": true,
    "module": "node16",
    "outDir": "build",
    "strict": true,
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@cli/*": ["cli/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "cli/**/*"
  ]
}